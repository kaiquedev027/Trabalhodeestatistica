{
  "version": 2,
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "public"
      }
    },
    {
      "src": "src/css/**/*",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "public/css"
      }
    },
    {
      "src": "src/js/**/*",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "public/js"
      }
    },
    {
      "src": "src/json/**/*",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "public/json"
      }
    }
  ],
  "routes": [
    {
      "src": "/img/(.*)",
      "dest": "/public/img/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
